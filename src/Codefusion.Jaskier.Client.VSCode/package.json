{
    "name": "jaskier",
    "displayName": "Jaskier - defect prediction",
    "description": "Defect prediction extension for VS Code. Based on machine learning models created with continuous integration build results as feature it will try to predict if the changes you are currently making in your project will likely result in build failure or not.",
    "version": "1.4.1",
    "publisher": "CODEFUSION",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*"
    ],
    "main": "./out/main",
    "contributes": {
        "commands": [
            {
                "title": "Show output",
                "category": "Jaskier",
                "command": "jaskier.showOutputChannel"
            },
            {
                "title": "Refresh predictions",
                "category": "Jaskier",
                "command": "jaskier.refreshPredictions"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Jaskier",
            "properties": {
                "jaskier.serviceUrl": {
                    "type": "string",
                    "default": "http://serwis.azurewebsites.net/",
                    "description": "Specifies the URL of the services."
                },
                "jaskier.debugMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true extension writes additional information to the output."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "publish-package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.0.53",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "vsce": "^1.69.0"
    },
    "dependencies": {
        "simple-git": "^1.84.0",
        "tsmetrics-core": "^0.4.3",        
    }
}
